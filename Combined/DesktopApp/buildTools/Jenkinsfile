pipeline {
    agent any
    options {
        skipDefaultCheckout()
    }
    stages {
        stage('Build') {
            steps {
                cleanWs()
                
                checkout scm

                sh 'cmake --version'
                sh 'mkdir ./Combined/DesktopApp/build'
                dir('./Combined/DesktopApp/build') {
                    sh 'pwd'
                    sh 'cmake ../src'
                    sh 'cmake --build .'
                }
            }
        }
    }
}